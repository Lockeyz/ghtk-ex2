<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/ic_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_up"
        android:importantForAccessibility="no"
        />

    <TextView
        android:id="@+id/tv_is_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ic_up"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="UP!"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_is_up"
        app:layout_constraintStart_toEndOf="@+id/tv_is_up"
        app:layout_constraintBottom_toBottomOf="@id/tv_is_up"
        tools:text="Len lam truong phong"
        android:layout_margin="4dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
</androidx.constraintlayout.widget.ConstraintLayout>